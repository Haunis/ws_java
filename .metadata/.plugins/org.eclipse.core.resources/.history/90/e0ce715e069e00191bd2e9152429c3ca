package com.aaa.test;


public class AAAmain {
	public static void main(String[] args) {
		double[] array = new double[] { 1000, 900, 1100, 1050, 1150 };
		double average = getAverage(array);
		double variance = getVariance(array);
		System.out.println("avarage = " + average + " ,variance =" + variance);

		double[] array2 = new double[] { 1050, 1150, 950, 1000, 1200 };
		double average2 = getAverage(array2);
		double variance2 = getVariance(array2);
		System.out.println("avarage2 = " + average2 + " ,variance2 =" + variance2);
	}

	public static double getVariance(double[] array) {
		double sum = 0;
		for (double d : array) {
			sum += d * d;
		}
		return (sum - array.length * getAverage(array) * getAverage(array)) / array.length;
	}

	public static double getAverage(double[] array) {
		double sum = 0;
		for (double d : array) {
			sum += d;
		}
		return sum / array.length;
	}
}
