package com.jiage.spinlock;

import java.util.concurrent.atomic.AtomicIntegerFieldUpdater;
import java.util.concurrent.atomic.AtomicReferenceFieldUpdater;

public class CLHLock implements MyLock {
	private static class CLHLockNode {
		public boolean locked = true;
	}

	private ThreadLocal<CLHLockNode> local = new ThreadLocal<CLHLockNode>();
	private AtomicReferenceFieldUpdater<CLHLock, CLHLockNode> updater = AtomicIntegerFieldUpdater
			.newUpdater(CLHLock.class, CLHLockNode.class, "locked");

	@Override
	public void lock() {
		CLHLockNode node = new CLHLockNode();
		local.set(node);

		CLHLockNode preNode = new CLHLockNode();

	}

	@Override
	public void unLock() {

	}

}
