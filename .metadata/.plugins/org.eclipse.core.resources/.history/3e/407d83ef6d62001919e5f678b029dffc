package com.enum_demo

enum class Color {
	RED,
	BLUE,
	GREEN
}

//遍历枚举
inline fun <reified T : Enum<T>> printAllValues() {
	val colors: Array<T> = enumValues<T>()
	val result: String = colors.joinToString { it.name }
	println("result : ${result}")

	val colors2: Array<Color> = Color.values()
	for (item in colors2) {
		println("item : ${item}")
	}
}

fun main(args: Array<String>) {
	val color = Color.RED

	println("Color.valueOf(\"RED\") : ${Color.valueOf("RED")}")
	println("color.name = ${color.name}")
	println("color.ordinal = ${color.ordinal}")//获取枚举值在所有枚举数组中定义的顺序
	val blue: Color = enumValueOf<Color>("BLUE");
	println("blue=${blue}, blue.name=${blue.name}, blue.ordinal=${blue.ordinal}");

	println("遍历枚举------------------------------")
	printAllValues<Color>()//RED, BLUE, GREEN
}

