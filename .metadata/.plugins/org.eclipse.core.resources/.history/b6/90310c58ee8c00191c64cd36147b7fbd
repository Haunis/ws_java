package com.jiage.wait;

public class MainWait {
	public static void main(String[] args) {
		String lock = "a";
		int total;
		new Thread(() -> {
			synchronized (lock) {

				for (int i = 0; i < 101; i++) {
					total += i;
				}
				// （完成计算了）唤醒在此对象监视器上等待的单个线程，在本例中线程A被唤醒
				notify();
				System.out.println("计算完成");

			}
		}).start();

	}
}
