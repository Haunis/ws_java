package com.aaa.test;

public class AAAmain {
	/* volatile */ static boolean flag = true;

	public static void main(String[] args) {

		new Thread(() -> {
			try {
				Thread.sleep(3);
				flag = false;
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}).start();
		while (flag) {
		}
		System.out.println("this is end");
	}
}
